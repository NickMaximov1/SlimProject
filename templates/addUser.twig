{% extends 'base.twig' %}

{% block body %}
    {% if 'admin' == user.role %}
        {% if message is not null %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endif %}
        <div class="container">
            <h1>Add new user</h1>
            <form method="post" action="/add-user-post">

                <div class="form-group col-md-3">
                    <label for="login">Login</label>
                    <input type="text" name="login" class="form-control" id="login" value="{{ form ? form.login }}"/>
                </div>
                <br>

                <div class="form-group col-md-3">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="form-control" id="password"/>
                </div>
                <br>

                <div class="form-group col-md-3">
                    <label for="confirm-password">Confirm Password</label>
                    <input type="password" name="confirm_password" class="form-control" id="confirm_password"/>
                </div>
                <br>

                <div class="form-check">
                    <input type="radio" class="form-check-input" name="role" value="admin" id="admin"/>
                    <label class="form-check-label" for="admin">
                        Admin
                    </label>
                </div>

                <div class="form-check">
                    <input type="radio" class="form-check-input" name="role" value="user" id="user" checked>
                    <label class="form-check-label" for="user">
                        User
                    </label>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">
                    Add user
                </button>
            </form>
        </div>
    {% else %}
        <div class="container">
            <h1 class="mb-3 mt-5">This is not your business</h1>
        </div>
    {% endif %}
{% endblock %}